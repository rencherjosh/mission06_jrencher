@{
    ViewData["Title"] = "New Movie Form";
}

@model mission06_jrencher.Models.MovieResponse

<h1>Movie Form</h1>

@*Creates the movie form, and tells the site what to highlight when things are clicked on.*@
<div>
    <form method="post">
        //Creates validation error messages
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Major</option>
            @*Creates a dropdown list based on the categories*@
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="0">G</option>
            <option value="1">PG</option>
            <option value="2">PG-13</option>
            <option value="3">R</option>
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" /><br />

        <button type="submit">Add Movie</button>
    </form>
</div>

@*//Category
//Title
//Year
//Director
//Rating (Dropdown G, PG, PG-13, R)
//Edited (yes or no) (optional)
//Lent To: (optional)
//Notes (optional)(12 char limit)*@